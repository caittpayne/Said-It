<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>


      <h3><%= `${user.email}'s profile` %></h3>

      <hr>

      <h5> Latest Posts</h5>

      <ul class="list-unstyled">


        <% if(posts) { %>
          <% posts.forEach((post) => { %>

            <li>
              <a href="/topics/<%= post.topicId %>/posts/<%= post.id %>">
                <%= post.title %>
              </a>
            </li>
          <% }) %>
        <% } %>
      </ul>
      <hr>

      <h5> Latest Comments</h5>

      <ul class="list-unstyled">


        <% if(comments) { %>
          <% comments.forEach((comment) => { %>


            <li>
              <span>Post: </span><a href="/topics/<%= comment.Post.topicId %>/posts/<%= comment.Post.id %>">
                <%= comment.Post.title %>
              </a>
              <p>Comment: <%= comment.body %></p>
            </li>
            <hr>
          <% }) %>
        <% } %>
      </ul>
      <hr>
     
      <h5> Favorite Posts</h5>

      <ul class="list-unstyled">


        <% if(favorites) { %>
          <% favorites.forEach((favorite) => { %>


            <li>
              <a href="/topics/<%= favorite.Post.topicId %>/posts/<%= favorite.Post.id %>">
                <%= favorite.Post.title %>
              </a>
            </li>
            <hr>
          <% }) %>
        <% } %>
      </ul>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>